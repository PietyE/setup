{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    // should be break or default in switch case
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    // no files w/o exports imports
    "isolatedModules": true,
    // do no add compile code for browser , source-maps etc , left it for babel
    "noEmit": true,
    //transform jsx with jsx function jsx
    "jsx": "react-jsx",
    "baseUrl": "src",
    //to avoid undefined types
    "exactOptionalPropertyTypes": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    // to indicate types and interfaces
    "preserveValueImports": true,
    "removeComments": true,
    "paths": {
      "@components/*": ["components/*"],
      "@styles/*": ["styles/*"]
    },
    "plugins": [
      {
        //for typescript config to recognize css modules
       "name": "typescript-plugin-css-modules",
      }
    ]
  },
  "include": ["src"]
}
